<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
	android:layout_width="fill_parent"
	android:layout_height="fill_parent"
	xmlns:android="http://schemas.android.com/apk/res/android"
	android:orientation="vertical"
	android:background="#8f97a3"
>
	<LinearLayout
		android:layout_width="fill_parent"
		android:gravity="center"
		android:background="@drawable/bar"
		android:layout_height="40dip"
	>
		<TextView
			android:layout_width="wrap_content"
			android:layout_height="wrap_content"
			android:layout_weight="1"
			android:layout_gravity="center"
			android:gravity="center"
			android:text="路線検索"
			android:textColor="#000000"
		></TextView>
		<Button
			android:layout_height="wrap_content"
			android:id="@+id/search"
			android:onClick="search"
			android:text="検索"
			android:layout_width="50dip"
		></Button>
		<Button
			android:layout_height="wrap_content"
			android:text="戻る"
			android:layout_width="50dip"
			android:onClick="backPrvActivity"
		></Button>
	</LinearLayout>
	<LinearLayout
		android:layout_height="wrap_content"
		android:layout_width="fill_parent"
		android:layout_margin="2dip"
		android:orientation="vertical"
		android:background="@drawable/description_back"
	>
		<LinearLayout
			android:layout_width="wrap_content"
			android:layout_height="wrap_content"
		>
			<TextView
				android:id="@+id/TextView01"
				android:layout_width="wrap_content"
				android:layout_height="wrap_content"
				android:text="From:"
				android:textColor="#000000"
			></TextView>
			<TextView
				android:layout_width="wrap_content"
				android:layout_height="wrap_content"
				android:text="startLocation"
				android:id="@+id/start"
				android:textSize="15dip"
				android:textColor="#000000"
				android:layout_weight="1"
				android:gravity="center"
			></TextView>
		</LinearLayout>
		<LinearLayout
			android:layout_width="wrap_content"
			android:layout_height="wrap_content"
		>
			<TextView
				android:layout_width="wrap_content"
				android:layout_height="wrap_content"
				android:textSize="15dip"
				android:padding="2dip"
				android:textColor="#000000"
				android:text="to:"
			></TextView>
			<TextView
				android:layout_width="wrap_content"
				android:layout_height="wrap_content"
				android:id="@+id/goal"
				android:text="goalLocation"
				android:textSize="15dip"
				android:padding="2dip"
				android:paddingRight="2dip"
				android:textColor="#000000"
				android:layout_weight="1"
				android:gravity="center"
			></TextView>
		</LinearLayout>
	</LinearLayout>
	<TextView
		android:layout_width="wrap_content"
		android:layout_height="wrap_content"
		android:textColor="#ffffff"
		android:textSize="15dip"
		android:text="前入り設定"
		android:padding="2dip"
	></TextView>
	<Spinner
		android:id="@+id/Spinner01"
		android:layout_height="wrap_content"
		android:entries="@array/spinner_array"
		android:layout_width="fill_parent"
		android:fadingEdge="horizontal"
		android:layout_marginRight="2dip"
		android:layout_marginLeft="30dip"
	></Spinner>
	<LinearLayout
		android:layout_height="wrap_content"
		android:orientation="vertical"
		android:layout_width="fill_parent"
		android:layout_margin="2dip"
	>
		<TextView
			android:layout_width="wrap_content"
			android:layout_height="wrap_content"
			android:text="表示優先度"
			android:textColor="#ffffff"
			android:textSize="15dip"
			android:padding="2dip"
		></TextView>
		<RadioGroup
			android:layout_height="wrap_content"
			android:id="@+id/sort"
			android:orientation="horizontal"
			android:layout_weight="1"
			android:layout_width="fill_parent"
			android:layout_marginRight="2dip"
			android:layout_marginLeft="30dip"
		>
			<RadioButton
				android:layout_width="wrap_content"
				android:layout_height="wrap_content"
				android:text="料金"
				android:textSize="12dip"
				android:checked="true"
				android:id="@+id/fare"
				android:textColor="#ffffff"
				android:layout_weight="1"
			></RadioButton>
			<RadioButton
				android:layout_width="wrap_content"
				android:layout_height="wrap_content"
				android:id="@+id/time"
				android:text="時間"
				android:textSize="12dip"
				android:textColor="#ffffff"
				android:layout_weight="1"
			></RadioButton>
			<RadioButton
				android:layout_width="wrap_content"
				android:layout_height="wrap_content"
				android:id="@+id/change_lines"
				android:text="乗り換え回数"
				android:textColor="#ffffff"
				android:textSize="12dip"
				android:layout_weight="1"
			></RadioButton>
		</RadioGroup>
	</LinearLayout>
	<View
		android:layout_width="wrap_content"
		android:layout_height="1dip"
		android:background="@drawable/divider_horizontal_dark_opaque"
	></View>
	<ListView
		android:layout_width="wrap_content"
		android:layout_height="wrap_content"
		android:id="@+id/result_view"
		android:clickable="false"
	></ListView>
</LinearLayout>