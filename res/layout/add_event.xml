<LinearLayout
	xmlns:android="http://schemas.android.com/apk/res/android"
	android:layout_height="fill_parent"
	android:layout_width="fill_parent"
	android:orientation="vertical"
	android:background="#8f97a3"
>
	<LinearLayout
		android:layout_width="fill_parent"
		android:background="@drawable/bar"
		android:layout_gravity="center"
		android:layout_height="wrap_content"
	>
		<TextView
			android:layout_height="wrap_content"
			android:layout_width="wrap_content"
			android:layout_gravity="center"
			android:layout_weight="1"
			android:gravity="center"
			android:text="予定作成"
			android:textColor="#000000"
			android:textSize="15dip"
		android:id="@+id/activity_title"></TextView>
		<Button
			android:id="@+id/deside"
			android:layout_height="wrap_content"
			android:layout_margin="2dip"
			android:onClick="desideSchedule"
			android:layout_width="50dip"
		android:text="保存"></Button>
		<Button
			android:id="@+id/cancel"
			android:layout_height="wrap_content"
			android:layout_margin="2dip"
			android:onClick="goToPreviousActivity"
			android:text="戻る"
			android:layout_width="50dip"
		></Button>
	</LinearLayout>
	<ScrollView
		android:layout_width="fill_parent"
		android:layout_height="fill_parent"
	>
		<LinearLayout
			android:layout_width="fill_parent"
			android:layout_height="fill_parent"
			xmlns:android="http://schemas.android.com/apk/res/android"
			android:orientation="vertical"
		>
			<TextView
				android:layout_width="wrap_content"
				android:layout_height="wrap_content"
				android:text="タイトル"
				android:textColor="#FFFFFF"
				android:textSize="15dip"
			></TextView>
			<EditText
				android:layout_width="fill_parent"
				android:layout_height="wrap_content"
				android:textSize="15dip"
				android:layout_marginRight="3dip"
				android:id="@+id/title_name"
			></EditText>
			<TextView
				android:layout_width="wrap_content"
				android:layout_height="wrap_content"
				android:text="スケジュール設定"
				android:textColor="#ffffff"
				android:textSize="15dip"
				android:padding="3dip"
			></TextView>
			<LinearLayout
				android:layout_height="wrap_content"
				android:orientation="vertical"
				android:layout_width="fill_parent"
				android:background="@drawable/description_back"
				android:layout_margin="3dip"
				android:padding="4dip"
				android:id="@+id/locations"
				android:onClick="setTime"
			>
				<LinearLayout
					android:layout_width="wrap_content"
					android:layout_height="wrap_content"
					android:padding="2dip"
				>
					<TextView
						android:layout_width="wrap_content"
						android:layout_height="wrap_content"
						android:text="From:"
						android:textColor="#000000"
					></TextView>
					<TextView
						android:layout_width="wrap_content"
						android:layout_height="wrap_content"
						android:layout_toRightOf="@+id/finMin"
						android:textColor="#000000" android:id="@+id/strTime_on_add_event"></TextView>
				</LinearLayout>
				<LinearLayout
					android:layout_width="wrap_content"
					android:layout_height="wrap_content"
					android:padding="2dip"
				>
					<TextView
						android:layout_width="wrap_content"
						android:layout_height="wrap_content"
						android:text="To:"
						android:paddingRight="18dip"
						android:textColor="#000000"
					></TextView>
					<TextView
						android:layout_width="wrap_content"
						android:layout_height="wrap_content"
						android:layout_toRightOf="@+id/finMin"
						android:textColor="#000000" android:id="@+id/finTime_on_add_event"></TextView>
				</LinearLayout>
			</LinearLayout>
			<TextView
				android:layout_width="wrap_content"
				android:layout_height="wrap_content"
				android:text="地点設定"
				android:textColor="#ffffff"
				android:textSize="15dip"
				android:padding="3dip"
			></TextView>
			<LinearLayout
				android:layout_height="wrap_content"
				android:background="@drawable/description_back"
				android:orientation="vertical"
				android:layout_width="fill_parent"
				android:layout_margin="3dip"
				android:onClick="setLocation"
			>
				<LinearLayout
					android:layout_toLeftOf="@+id/start"
					android:layout_height="wrap_content"
					android:layout_width="wrap_content"
				>
					<TextView
						android:layout_width="wrap_content"
						android:layout_height="wrap_content"
						android:text="出発地:"
						android:textColor="#000000"
					></TextView>
					<TextView
						android:layout_width="wrap_content"
						android:layout_height="wrap_content"
						android:textColor="#000000"
						android:layout_marginLeft="2dip" android:id="@+id/start_place_add_event"></TextView>
				</LinearLayout>
				<LinearLayout
					android:layout_toLeftOf="@+id/start"
					android:layout_height="wrap_content"
					android:layout_width="wrap_content"
				>
					<TextView
						android:layout_width="wrap_content"
						android:layout_height="wrap_content"
						android:text="目的地:"
						android:textColor="#000000"
					></TextView>
					<TextView
						android:layout_width="wrap_content"
						android:layout_height="wrap_content"
						android:layout_toRightOf="@+id/start"
						android:textColor="#000000"
						android:layout_marginLeft="2dip" android:id="@+id/finish_place_add_event"></TextView>
				</LinearLayout>
			</LinearLayout>
			<TextView
				android:layout_width="wrap_content"
				android:layout_height="wrap_content"
				android:textColor="#ffffff"
				android:textSize="15dip"
				android:layout_margin="3dip"
			android:text="ルート検索"></TextView>
			<LinearLayout
				android:layout_height="wrap_content"
				android:layout_width="fill_parent"
				android:onClick="setRoute"
				android:background="@drawable/description_back"
				android:layout_margin="3dip"
			>
				<TextView
					android:layout_height="wrap_content"
					android:layout_width="fill_parent"
					android:textColor="#000000"
					android:padding="3dip"
					android:text="ルートは設定されていません。"
					android:onClick="setRoute"
					android:id="@+id/basic_info"
				></TextView>
				<LinearLayout
					android:layout_width="wrap_content"
					android:layout_height="wrap_content"
					android:id="@+id/route_description"
				></LinearLayout>
			</LinearLayout>
			
			
		</LinearLayout>
	</ScrollView>
</LinearLayout>